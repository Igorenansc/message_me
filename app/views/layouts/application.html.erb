  <body>
    <!-- Navigation Menu -->
    <div class="ui small inverted menu">
      <div class="ui container">
        <%= render 'layouts/navigation' %>
      </div>
    </div>
    <!-- End of Navigation Menu -->
    <div class="ui container">
      <%= yield %>
    </div>
  </body>
</html>
